<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.AccountFragment"
    android:background="@drawable/backgroud_item_reverse">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBack"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="36dp"/>
    <TextView
        android:id="@+id/tvOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Status"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_toEndOf="@id/imgBack"
        android:layout_marginStart="36dp"
        android:layout_alignBottom="@id/imgBack" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/imgBack"
        android:layout_marginTop="12dp"
        android:background="@color/colorAccent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>
    <RelativeLayout
        android:id="@+id/rltProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgBack"
        android:layout_marginTop="24dp"
        android:background="@drawable/background_item"
        android:elevation="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Order Information :"
            android:textSize="16sp"
            android:textStyle="italic"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProduct"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_google"
            android:layout_below="@id/tv1"
            android:layout_alignStart="@id/tv1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:layout_alignTop="@id/imgProduct"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:text="Ten san pham"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSoLuong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:layout_alignParentEnd="true"
            android:text="So luong"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvProductName"
            android:text="Don gia"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@color/color_price"
            android:layout_alignStart="@id/tvProductName"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSellLocal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgProduct"
            android:text="dia chi ng ban"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvPrice"
            android:layout_alignStart="@id/tvPrice"
            android:ellipsize="end"
            android:maxLines="2"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlvStatus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rltProduct"
        android:layout_marginTop="36dp"
        android:layout_marginStart="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="22dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgComplete1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_timeclock"
                android:padding="8dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgComplete1"
                android:layout_toEndOf="@id/imgComplete1"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/imgComplete1"
                android:layout_marginStart="24dp"
                android:background="@drawable/background_item_primary"
                android:layout_marginEnd="12dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDiaDiem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Dia diem"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Thoi gian"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tvDiaDiem1"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlvStatus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlvStatus1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="22dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgComplete2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_timeclock"
                android:padding="8dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgComplete2"
                android:layout_toEndOf="@id/imgComplete2"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/imgComplete2"
                android:layout_marginStart="24dp"
                android:background="@drawable/background_item_primary"
                android:layout_marginEnd="12dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDiaDiem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Dia diem"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Thoi gian"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tvDiaDiem2"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlvStatus3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlvStatus2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent"
                android:layout_marginTop="22dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgComplete3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle"
                android:layout_marginStart="36dp"
                android:src="@drawable/ic_timeclock"
                android:padding="8dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imgComplete3"
                android:layout_toEndOf="@id/imgComplete3"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/imgComplete3"
                android:layout_marginStart="24dp"
                android:background="@drawable/background_item_primary"
                android:layout_marginEnd="12dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDiaDiem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Dia diem"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTime3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Thoi gian"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tvDiaDiem3"
                    android:layout_marginTop="4dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlvStatus3"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:background="@drawable/background_item"
        android:text="Thong tin Shipper"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtMaDH"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tvShipper"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_item"
        android:text="Nhap ma DH" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtMaDH"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="Tim Kiem" />
    </RelativeLayout>
    </ScrollView>






</RelativeLayout>